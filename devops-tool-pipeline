pipeline {
    agent any

    environment {
        DOCKERHUB_REPO = 'krishnadale007/css-jenkins'
    }

    stages {
        stage('Pull Source Code') {
            steps {
                git 'https://github.com/krishnadale007/project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t ${DOCKERHUB_REPO}:latest .'
                }
            }
        }

        stage('Push Docker Image') {
            environment {
                registryCredential = 'docker-creds'
            }
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', registryCredential) {
                        sh 'docker push ${DOCKERHUB_REPO}:latest'
                    }
                }
            }
        }

        stage('Kube Deploy') {
            steps {
                script {
                    // Replace with your actual cluster information and credentials ID
                    withKubeConfig(caCertificate: '', 
                                   clusterName: 'my-cluster', 
                                   contextName: 'my-cluster-context', 
                                   credentialsId: 'k8s-creds', 
                                   namespace: 'default', 
                                   restrictKubeConfigAccess: true, 
                                   serverUrl: 'https://your-cluster-endpoint') {
                        
                        // Optionally, apply the Kubernetes manifest if needed
                        sh "kubectl apply -f k8s-pipeline.yml"
                    }
                }
            }
        }
    }
}
